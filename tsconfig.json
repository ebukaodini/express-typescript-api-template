{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "removeComments": true,
    "strict": false,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "typeRoots": ["./src/types"],
    "noFallthroughCasesInSwitch": false
  },
  "include": ["./*.js", "src/**/*.ts"],
  "exclude": ["build"]
}
